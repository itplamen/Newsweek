@model SearchResponseViewModel

@{
    ViewData["Title"] = "Administration - News";
}

@section Styles {
    <link rel="stylesheet" href="~/css/administration.css" />
}

<small class="lead">
    Showing
    <span class="font-weight-bolder">@Model.NewsCount</span>
    results for
    <span class="font-weight-bolder">@ViewData["Title"]</span>
</small>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">CreatedOn</th>
            <th scope="col">ModifiedOn</th>
            <th scope="col">IsDeleted</th>
            <th scope="col">DeletedOn</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var news in Model.News)
        {
            <tr>
                <th scope="row">@news.Id</th>
                <td>@news.CreatedOn</td>
                <td>@news.ModifiedOn</td>
                <td>@news.IsDeleted</td>
                <td>@news.DeletedOn</td>
                <td>
                    <button class="btn btn-primary btn-sm">Update</button>

                    @{
                        string disabled = news.IsDeleted ? "disabled" : string.Empty;
                        <form class="delete-news-administration" method="post" asp-area="Administration" asp-action="Delete" asp-controller="News">
                            <input type="hidden" name="id" value="@news.Id" />
                            <button class="btn btn-danger btn-sm" @disabled>Delete</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.PagesCount > 1)
{
    <nav aria-label="News Pagination" id="pagination">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       aria-label="Previous"
                       asp-area="Administration"
                       asp-controller="News"
                       asp-action="Index"
                       asp-route-page="@Model.PreviousPage">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            @{
                const int MorePagesToShow = 3;
                var pagesToShow = new List<int>();
                for (int i = 1; i <= MorePagesToShow; i++)
                {
                    pagesToShow.Add(i);
                }
                for (int i = Model.CurrentPage - MorePagesToShow; i <= Model.CurrentPage + MorePagesToShow; i++)
                {
                    if (i > 0)
                    {
                        pagesToShow.Add(i);
                    }
                }
                for (int i = Model.PagesCount - MorePagesToShow + 1; i <= Model.PagesCount; i++)
                {
                    if (i > 0)
                    {
                        pagesToShow.Add(i);
                    }
                }
                pagesToShow = pagesToShow.Where(x => x <= Model.PagesCount).Distinct().OrderBy(x => x).ToList();
            }
            @for (int i = 0; i < pagesToShow.Count; i++)
            {
                string className = string.Empty;
                int pageNumber = pagesToShow[i];

                if (pageNumber == Model.CurrentPage)
                {
                    className = "active";
                }
                if (i > 0 && pageNumber - 1 != pagesToShow[i - 1])
                {
                    <li class="page-item @className">
                        <a class="page-link"
                           asp-area="Administration"
                           asp-controller="News"
                           asp-action="Index"
                           asp-route-page="@(pagesToShow[i - 1] + 1)">...</a>
                    </li>
                }
                <li class="page-item @className">
                    <a class="page-link"
                       asp-area="Administration"
                       asp-controller="News"
                       asp-action="Index"
                       asp-route-page="@pageNumber">@pageNumber</a>
                </li>
            }
            @if (Model.CurrentPage < Model.PagesCount)
            {
                <li class="page-item">
                    <a class="page-link"
                       aria-label="Next"
                       asp-area="Administration"
                       asp-controller="News"
                       asp-action="Index"
                       asp-route-page="@Model.NextPage">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
}