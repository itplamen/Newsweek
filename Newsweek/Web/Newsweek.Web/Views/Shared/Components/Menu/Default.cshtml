@model IEnumerable<MenuViewModel>

<ul class="navbar-nav flex-grow-1" id="navigationMenu">
    @foreach (var menu in Model)
    {
        <li class="nav-item dropdown btn-group">
            <a class="nav-link text-dark btn-light" asp-area="" asp-controller="News" asp-action="@menu.Name">@menu.Name</a>
            <span class="btn btn-light dropdown-toggle dropdown-toggle-split dropdown-arrow" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></span>
            <div class="dropdown-menu">
                <input type="text" placeholder="Search..." class="dropdown-search" />
                <div class="dropdown-menu-scrollable">
                    @foreach (var submenu in menu.Submenu)
                    {
                        <a class="dropdown-item" asp-area="" asp-controller="News" asp-action="@menu.Name" asp-route-id="@submenu.Name">@submenu.Name</a>
                    }
                </div>
            </div>
        </li>
    }

    <li class="nav-item dropdown btn-group">
        <a class="nav-link text-dark btn-light" asp-area="" asp-controller="Sources" asp-action="Index">Sources</a>
    </li>

    @if (User.IsInRole(ApplicationRoles.ADMINISTRATOR))
    {
        <li class="nav-item dropdown btn-group" id="administration-manage">
            <a class="nav-link text-dark btn-light" asp-area="Administration" asp-controller="Dashboard" asp-action="Index">
                <svg class="bi bi-tools" width="1.2em" height="1.2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
