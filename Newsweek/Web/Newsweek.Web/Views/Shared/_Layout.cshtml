<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Newsweek</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Newsweek</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <form method="get" asp-controller="News" asp-action="Search">
                        <input type="text" placeholder="Search..." class="dropdown-search" name="Tag" />
                    </form>
                    <vc:menu></vc:menu>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - @DateTime.UtcNow.Year Newsweek - <a href="https://github.com/itplamen/Newsweek" target="_blank">GitHub (itplamen)</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $('#navigationMenu').on('keyup', '.dropdown-search', function () {
            let text = $(this).val(); 

            $(this)
                .next()
                .children('.dropdown-item')
                .each(function (index, element) {
                    let content = $(element).html().toLowerCase();

                    if (content.indexOf(text.toLowerCase()) > -1) {
                        $(element).show();
                    }
                    else {
                        $(element).hide();
                    }
                });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>